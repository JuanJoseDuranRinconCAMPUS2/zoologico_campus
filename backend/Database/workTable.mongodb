                pattern: "^[a-zA-Z0-9√°√©√≠√≥√∫√Å√â√ç√ì√ö√±√ë ]+$",
                maxLength: 100
             },
             dimensiones: {
                bsonType: "string",
                description: "'dimensiones' ser una unidad de metros cuadrados",
                pattern: "^[0-9]+[mM]2$",
                maxLength: 20
             },
             limite_Especimenes: {
                bsonType: "int",
                description: "'limite_Especimenes' debe ser un numero positivo",
                pattern: "^[1-9][0-9]*$",
